model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  image       String
  category    String
  price       Float
  quantity    Int
  createdAt   DateTime @default(now())
  sold        Sold[]
}

model Sold {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  price     Float
  category  String
  createdAt DateTime @default(now())
  productId String   @db.ObjectId
  order     Order[]
  product   Product? @relation(fields: [productId], references: [id])
}

model Order {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  email        String
  cep          String
  address      String
  neighborhood String
  city         String
  state        String
  done         Boolean
  createdAt    DateTime @default(now())
  soldId       String   @db.ObjectId
  sold         Sold     @relation(fields: [soldId], references: [id])
}
