generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id          String   @id @default(uuid())
  title       String
  description String
  image       String
  category    String
  price       Float
  quantity    Int
  createdAt   DateTime @default(now())
}

model Sold {
  id        String   @id @default(uuid())
  title     String
  price     Float
  category  String
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String
  createdAt DateTime @default(now())
  password  String?
}
