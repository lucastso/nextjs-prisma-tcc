model Product {
  id          String   @id @default(uuid())
  title       String
  description String
  image       String
  category    String
  price       Float
  quantity    Int
  createdAt   DateTime @default(now())
  sold        Sold[]
}

model Sold {
  id        String   @id @default(uuid())
  title     String
  price     Float
  category  String
  createdAt DateTime @default(now())
  productId String?
  Order     Order[]
  product   Product? @relation(fields: [productId], references: [id])

  @@index([productId])
}

model Order {
  id           String   @id @default(uuid())
  name         String
  email        String
  cep          String
  address      String
  neighborhood String
  city         String
  state        String
  createdAt    DateTime @default(now())
  soldId       String
  sold         Sold     @relation(fields: [soldId], references: [id])

  @@index([soldId])
}
